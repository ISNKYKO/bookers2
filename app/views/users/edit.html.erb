

        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    
    <%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"user_name", class: "form-control name" %>
  </div>
  
<div class="form-group">
  <label for="user_image">Image</label>
  <%= f.file_field :profile_image, placeholder:"user_profile_image", accept:"image/*", class: "form-control-file user_image" %>
</div>
  
<div class="form-group">  
  <label for="user_introduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"user_introduction", placeholder:"user_introduction", class: "form-control" %>
</div>
  
  <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
  </div>
  
  </form>

</div>
</div>
</div>
      
<% end %>
    
 
        
      
       
      





